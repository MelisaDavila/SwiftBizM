---
import Base from "../../layouts/Base.astro";
import TextBlock from "../../components/TextBlock.astro";
import ModuleCard from "../../components/ModuleCard.astro";

interface Module {
  url?: string;
  title?: string;
  description?: string;
  nameRoute?: string;
}

const modules: Module[] = [
  {
    title: "Gestion de Inventario",
    description:
      "Se encarga de la administración de los Ingresos y Egresos del inventario, vinculado con pedidos y proveedores.",
    url: "/public/images/modulos/m1.png",
    nameRoute: "inventario",
  },
  {
    title: "Gestión de Finanzas",
    description:
      "Se encarga de la administración de los Ingresos y Egresos del inventario, vinculado con pedidos y proveedores.",
    url: "/public/images/modulos/m2.png",
    nameRoute: "finanzas",
  },
  {
    title: "Generación de Facturas",
    description:
      "Se encarga de la administración de los Ingresos y Egresos del inventario, vinculado con pedidos y proveedores.",
    url: "/public/images/modulos/m3.png",
    nameRoute: "facturacion",
  },
  {
    title: "Gestión de Recursos Humanos",
    description:
      "Administración de múltiples almacenes con herramientas para visualizar y actualizar el stock y reubicar productos.",
    url: "/public/images/modulos/m4.png",
    nameRoute: "empleados",
  },
  {
    title: "Gestión de Clientes",
    description:
      "Administración de múltiples almacenes con herramientas para visualizar y actualizar el stock y reubicar productos.",
    url: "/public/images/modulos/m5.png",
    nameRoute: "clientes",
  },
  {
    title: "Gestión de Almacenes",
    description:
      "Administración de múltiples almacenes con herramientas para visualizar y actualizar el stock y reubicar productos.",
    url: "/public/images/modulos/m6.png",
    nameRoute: "almacenes",
  },
];
---

<Base>
  <section id="modulos" class="flex justify-center items-center py-16">
    <div
      class="container mx-auto space-y-8 flex flex-col justify-center items-center text-center"
    >
      <TextBlock
        title="Transformación Digital para tu Empresa"
        subtitle="Optimiza cada aspecto de tu gestión empresarial con módulos integrados."
      />
      <div class="grid grid-cols-2 gap-4 p-8">
        {
          modules.map((module) => (
            <ModuleCard
              title={module.title}
              description={module.description}
              urlImage={module.url}
              nameRoute={module.nameRoute}
            />
          ))
        }
      </div>
    </div>
  </section>
</Base>
